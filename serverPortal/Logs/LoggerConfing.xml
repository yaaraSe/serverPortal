<log4net>
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %level %message%newline" />
		</layout>
	</appender>
	<appender name="FileAppender" type="log4net.Appender.FileAppender">
		<file value="FileAppender-file.txt" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %level %message%newline" />
		</layout>
		<threshold value="WARN" />
		<!-- ... -->
	</appender>


	<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
		<file value="RollingFileAppender-file.txt" />
		<appendToFile value="true" />
		<rollingStyle value="Size" />
		<maxSizeRollBackups value="2" />
		<maximumFileSize value="1KB" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %level %message%newline" />
		</layout>

	</appender>


	<appender name="colors" type="log4net.Appender.ManagedColoredConsoleAppender">
		<mapping>
			<level value="INFO" />
			<forecolor value="Green" />
		</mapping>
		<mapping>
			<level value="WARN" />
			<forecolor value="Yellow" />
		</mapping>
		<mapping>
			<level value="ERROR" />
			<forecolor value="Red" />
		</mapping>
		<mapping>
			<level value="DEBUG" />
			<forecolor value="Blue" />
		</mapping>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %level %logger.%method[%line] - %message%newline" />
		</layout>
	</appender>
	<root>
		<level value="ALL" />
		<appender-ref ref="ConsoleAppender" />
		<appender-ref ref="FileAppender" />
		<appender-ref ref="RollingFileAppender" />
		<appender-ref ref="colors" />
	</root>
</log4net>